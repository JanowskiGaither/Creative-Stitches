// Calculate Total Costs for various items

// Update Other Total Cost after user input
export function calculateOtherTotal() {
    // Assume the fields aren't populated
    var otherAmountValue = 0;
    var otherCostPerItemValue = 0;

    //Check if the form has values for each field
    let otherAmount = document.getElementById("otherAmount");
    let otherCostPerItem = document.getElementById("otherCostPerItem");
    let otherTotalCost = document.getElementById("otherTotalCost");

    if (otherAmount !== null) {
        otherAmountValue = parseInt(otherAmount.value, 10);
    }

    if (otherCostPerItem !== null) {
        otherCostPerItemValue = parseInt(otherCostPerItem.value, 10);
    }

    // Update the value on the form
    if (otherTotalCost !== null) {
        otherTotalCost.value = otherAmountValue * otherCostPerItemValue;
    }
}

